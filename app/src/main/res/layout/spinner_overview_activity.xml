<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewSpinnerDropDownOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="18sp"
        android:layout_margin="3dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/spinnerDropDownArrowIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/arrow_down_float"
        android:layout_margin="3dp"

        app:layout_constraintStart_toEndOf="@id/textViewSpinnerDropDownOverview"
        app:layout_constraintTop_toTopOf="@id/textViewSpinnerDropDownOverview"
        app:layout_constraintBottom_toBottomOf="@id/textViewSpinnerDropDownOverview"/>

</androidx.constraintlayout.widget.ConstraintLayout>