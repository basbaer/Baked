<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity"
    android:background="@drawable/colorful"
    >

    <GridLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/GriyLayoutAddActivity"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Date"
        android:textSize="20sp"
        android:fontFamily="monospace"

        android:layout_row="0"
        android:layout_column="0"

      ></TextView>


    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"

        android:minWidth="220dp"

        android:layout_row="0"
        android:layout_column="1"
       />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewActivity"

        app:layout_constraintHorizontal_weight="1"
        android:text="Activity"
        android:textSize="20sp"
        android:fontFamily="monospace"

        android:layout_row="1"
        android:layout_column="0"

        ></TextView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activityEditText"

        android:minWidth="220dp"


        android:layout_row="1"
        android:layout_column="1"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewActivityType"

        android:text="Activity Type"
        android:textSize="20dp"
        android:fontFamily="monospace"

        android:layout_row="2"
        android:layout_column="0"
        ></TextView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activityTypeEditText"

        android:layout_row="2"
        android:layout_column="1"

        android:minWidth="220dp"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/colorTextView"

        app:layout_constraintHorizontal_weight="1"
        android:textSize="20sp"
        android:text="Color"
        android:fontFamily="monospace"

        android:layout_row="3"
        android:layout_column="0"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/colorEditText"
        app:layout_constraintTop_toBottomOf="@id/textViewActivityType"
        app:layout_constraintBottom_toBottomOf="parent"></TextView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/colorEditText"

        android:layout_row="3"
        android:layout_column="1"

        android:minWidth="220dp"/>


    </GridLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addActivityButton"

        android:text="Add activity"
        android:onClick="addActivity"

        app:layout_constraintVertical_bias="1.0"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />


</androidx.constraintlayout.widget.ConstraintLayout>

