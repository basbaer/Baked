<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/daysCL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:gravity="start">

    <TextView
        android:id="@+id/daysTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="sans-serif-light"
        android:maxLines="1"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_Adapter_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:visibility="gone"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ActivityTV_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"

            android:fontFamily="casual"
            android:padding="2dp"
            android:textColor="#000000"

            android:textSize="13sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_Adapter_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:visibility="gone"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ActivityTV_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"

            android:fontFamily="casual"
            android:padding="2dp"
            android:textColor="#000000"

            android:textSize="13sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_Adapter_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:visibility="gone"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ActivityTV_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"

            android:fontFamily="casual"
            android:padding="2dp"
            android:textColor="#000000"

            android:textSize="13sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_Adapter_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:visibility="gone"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ActivityTV_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"

            android:fontFamily="casual"
            android:padding="2dp"
            android:textColor="#000000"

            android:textSize="13sp" />

    </androidx.cardview.widget.CardView>






</LinearLayout>